#include <iostream>
using namespace std;
int main() {
    int num;
    cout << "Ingrese un nÃºmero decimal: ";
    cout <<"conversiones";
    cin >> num;
    cout << "Decimal: " << num << endl;
    int n = num;
    string binario = "";
    if (n == 0) binario = "0";
    while (n > 0) {
        binario = char((n % 2) + '0') + binario;
        n /= 2;
    }
    cout << "Binario: " << binario << endl;
    cout << "Octal: " << oct << num << endl;
    cout << "Hexadecimal: " << uppercase << hex << num << endl;

    return 0;
}
